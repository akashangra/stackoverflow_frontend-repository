
<%= form_with url: update_path(@user_id) do |f| %>

  <div class="form-group">

    <%= f.label :name, "Name:" %>
    <%= f.text_field :name, class: 'form-control',value:@json_res["name"], id: :name%>
  </div>

  <div class="form-group">
    <%= f.label :email, "Email:" %>
    <%= f.email_field :email , class: 'form-control',value:@json_res["email"], id: :email%>
  </div>

  <div class="form-group">
    <%= f.label :password, "Password:" %>
    <%= f.password_field :password , class: 'form-control', id: :password %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirm Password:" %>
    <%= f.password_field :password_confirmation, class: 'form-control', id: :password_confirmation %>
  </div>

  <%= f.submit "Submit" , class: 'btn-primary' %>

<% end %>